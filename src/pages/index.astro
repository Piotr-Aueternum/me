---
import Dust from "components/Dust/Dust.astro";
import SocialMedia from "components/SocialMedia.astro";
import Datetime from "components/Datetime.astro";
import CommonHead from "components/CommonHead.astro";
import {
  galleryLinks,
  blogLinks,
  availableGallery,
  availableBlog,
} from "lib/utils";

const posts = availableBlog.slice(0, 2);

const pictures = availableGallery.slice(0, 3);
---

<!doctype html>
<html lang="en">
  <head>
    <CommonHead title="Piotr Sochacz - Software Engineer" />
  </head>

  <body>
    <main>
      <section
        class="relative flex h-[80dvh] items-end justify-center p-4 md:items-center"
      >
        <img
          class="absolute inset-0 -z-2 h-[80dvh] w-full object-cover object-[80%] md:object-right"
          src="/intro.webp"
          alt="Background image presenting cave"
          loading="lazy"
        />
        <div class="container mx-auto">
          <h1>
            <span class="text-5xl text-slate-100">Piotr Sochacz</span>
            <br />
            <span class="font-serif text-2xl text-slate-300">
              Software Developer
            </span>
          </h1>
          <SocialMedia />
        </div>
        <Dust class="absolute inset-0 -z-1" />
      </section>
      <section>
        <div class="py-24 sm:py-40">
          <div class="mx-auto flex flex-col gap-y-24 md:w-2xl lg:w-4xl">
            <div class="mx-auto max-w-2xl md:mx-0">
              <h2 class="font-sans text-4xl font-semibold sm:text-5xl">
                Posts
              </h2>
            </div>
            <div
              class="mx-auto flex max-w-2xl flex-col gap-y-12 md:mx-0 md:max-w-none"
            >
              {
                posts.map(({ data, id }) => (
                  <section class="p-4">
                    <h3 class="mb-2 text-3xl font-semibold text-pretty">
                      <a href={blogLinks.slug(data.publishDate, id)}>
                        {data.title}
                      </a>
                    </h3>
                    <Datetime date={data.publishDate} class="px-2" />
                    <p class="mt-1 px-2 font-serif">{data.description}</p>
                  </section>
                ))
              }
            </div>
          </div>
        </div>
      </section>
      <section class="bg-secondary">
        <div class="py-24 sm:py-40">
          <div class="mx-auto flex flex-col gap-y-24 md:w-2xl lg:w-3xl">
            <div class="mx-auto md:mx-0">
              <h2
                class="text-center font-sans text-4xl font-semibold sm:text-5xl"
              >
                Art
              </h2>
            </div>
            <div
              class="mx-auto flex max-w-2xl grid-cols-2 flex-col gap-2 gap-y-12 md:mx-0 lg:max-w-none"
            >
              {
                pictures.map(({ data, id }) => (
                  <section class="relative">
                    <h3 class="text-center font-serif text-3xl font-semibold">
                      {data.title}
                    </h3>
                    <img
                      src={data.picture}
                      alt={data.description}
                      class="my-3"
                      loading="lazy"
                    />
                    <Datetime class="px-2" date={data.publishDate} />
                    <p class="mt-1 px-2 font-sans">{data.description}</p>
                    <a
                      href={galleryLinks.slug(data.publishDate, id)}
                      class="absolute inset-0"
                    />
                  </section>
                ))
              }
              <a href={galleryLinks.root} class="text-center text-xl underline"
                >Gallery ({availableGallery.length})</a
              >
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
