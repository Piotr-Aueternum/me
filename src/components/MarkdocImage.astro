---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
  src: ImageMetadata | string;
  alt: string;
}
const { src, alt } = Astro.props;
---

{
  typeof src === "string" ? (
    <img src={src} alt={alt} loading="lazy" />
  ) : (
    <Image src={src} alt={alt} loading="lazy" format="avif" />
  )
}
