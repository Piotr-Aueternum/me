---
interface Props {
  date: Date;
  class?: string;
}
---

<time
  datetime={Astro.props.date.toISOString().substring(0, 10)}
  class:list={["text-muted-foreground font-serif text-sm", Astro.props.class]}
>
  <slot name="before" />
  {
    Astro.props.date.toLocaleDateString("en-GB", {
      month: "short",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
