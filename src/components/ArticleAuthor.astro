---
import { getEntry } from "astro:content";

interface Props {
  authorId: string;
}

const author = await getEntry("authors", Astro.props.authorId);
if (!author) {
  throw new Error(`Author with ID ${Astro.props.authorId} not found.`);
}
---

<div class="relative flex items-center gap-x-3">
  <img src={author.data.image} alt="" class="size-10 rounded-full" />
  <div class="text-base">
    <p class="text-secondary-foreground font-semibold">
      <a href="#" class="inline-block">
        {author.data.name}
      </a>
    </p>
    <p class="text-muted-foreground">{author.data.title}</p>
  </div>
</div>
